#NewNewsModal.modal.fade aria-hidden="true" aria-labelledby="NewNewsModalLabel" role="dialog" tabindex="-1" 
	.modal-dialog.modal-lg
		.modal-content
			.modal-header
				button.close aria-hidden="true" data-dismiss="modal" type="button"  ×
				h4#NewNewsModalLabel.modal-title Добавить новость
			= form_for @new_news,remote: true,multipart: true do |f|
				.modal-body
				  = f.text_field :title ,placeholder: "Загловок", class: "form-control"
				  = f.text_area :description, rows: "10", placeholder: "Текст", class: "form-control"
				  = f.file_field :image, class: "form-control"

				  
				.modal-footer
					= f.submit "Подтвердить", class: "btn btn-primary pull-left", :disable_with => "Пожалуйста подождите.."
					button.btn.btn-ar.btn-default data-dismiss="modal" type="button"  Закрыть